<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="32dp"
>

    <!-- Main Title -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Pawxel!"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Virtual Pet House"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginBottom="24dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You just adopted a new pet! This little friend depends on you to grow healthy, happy, and strong. Explore your pet's cozy home, take care of its needs, and build a special bond together. Ready to start your journey with your new companion?"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp"
        android:maxWidth="400dp" />

    <!-- How to Play Button -->
    <Button
        android:id="@+id/howToPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:elevation="4dp" />

</LinearLayout>