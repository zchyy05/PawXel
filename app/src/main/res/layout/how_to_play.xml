<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Play Virtual Pet House"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take care of your pet by managing its needs and interacting with the room's objects."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginBottom="24dp"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Feed your pet by clicking the food icon to keep hunger low."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Give water to quench thirst by clicking the water icon."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Play with your pet using the bone or radio to increase happiness."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Let your pet sleep by clicking the bed to restore energy."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Monitor stats like Health, Hunger, Thirst, Energy, and Play on the top-left panel."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Check achievements by toggling the trophy icon to see your progress."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the door to go to the Bathroom."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/backToStoryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back to Story"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:layout_marginEnd="12dp"
                    android:paddingVertical="12dp"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/goToRoomButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Go to Room"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:layout_marginStart="12dp"
                    android:paddingVertical="12dp"
                    android:elevation="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Down arrow -->
    <ImageView
        android:id="@+id/scrollArrowDown"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/arrowdown"
        android:contentDescription="Scroll down hint"
        android:visibility="visible" />

    <!-- Up arrow -->
    <ImageView
        android:id="@+id/scrollArrowUp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/arrowup"
        android:contentDescription="Scroll up hint"
        android:visibility="gone" />
</FrameLayout>
